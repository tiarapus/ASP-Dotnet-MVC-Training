@{
    ViewData["title"] = "Mahasiswa";
    ViewData["container"] = "container-fluid";
    ViewData["active_page"] = "index";
    ViewData["submenu"] = await Html.PartialAsync("_subMenu.cshtml");
}


<div class="row py-4 justify-content-center">
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <h5 class="main-content-label font-weight-semibold tx-primary mb-0">
                    Tabel Mahasiswa:
                </h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                        <th scope="col">No. </th>
                        <th scope="col">Aksi</th>
                        <th scope="col">NIM</th>
                        <th scope="col">Nama</th>
                        <th scope="col">Prodi</th>
                        <th scope="col">Fakultas</th>
                        </tr>
                    </thead>
                    <tbody>
                    @{
                        var i = 1;
                    }

                    @foreach(var mahasiswa in Model)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>
                                <a type="button" asp-action="Update" asp-route-id="@mahasiswa.Id" class="btn btn-success">Edit</a>
                                <a type="button"  asp-action="Delete" asp-route-id="@mahasiswa.Id" class="btn btn-danger">Hapus</a>
                            </td>
                            <td>@mahasiswa.Nim</td>
                            <td>@mahasiswa.Nama</td>
                            <td>@mahasiswa.Prodi</td>
                            <td>@mahasiswa.Fakultas</td>
                        </tr>
                        i++;
                    }
                    </tbody>
                </table>
                
                <style>
                    .black{
                        color: #000000;
                    }
                    .grey-background{
                        background: #cccccc;
                    }
                    .paragraph-format{
                        padding: 100px;
                        margin-top: 50px;
                    }
                </style>
            </div>
        </div>
    </div>
</div>

