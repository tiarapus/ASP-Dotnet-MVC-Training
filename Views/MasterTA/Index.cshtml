@{
    ViewData["title"] = "MAsterTAForm";
    ViewData["container"] = "container-fluid";
    ViewData["active_page"] = "index";
    ViewData["submenu"] = await Html.PartialAsync("_subMenu.cshtml");
}


<div class="row py-4 justify-content-center">
    <div class="col-md-9">
        <table class="table">
            <thead>
                <tr>
                <th scope="col">No. </th>
                <th scope="col">Aksi </th>
                <th scope="col">Periode</th>
                <th scope="col">Nama Periode</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var master in Model)
                {
                <tr>
                <th scope="row">1</th>
                <td>
                    
                    <a type="button" asp-action="Update" asp-route-id="@master.Id" class="btn btn-success">Edit</a>
                    <a type="button"  asp-action="Delete" asp-route-id="@master.Id" class="btn btn-danger">Hapus</a>
                </td>
                <td>@master.Periode</td>
                <td>@master.Namaperiode</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
